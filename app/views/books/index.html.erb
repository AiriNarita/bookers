
<div class="index">

  <div class="header">
    <h1>Books</h1>
  </div>



   <div class="form">
    <% @books.each do |list| %>
　    <div class="box">
　      <div class="box1">title
          <span><%= list.title %> </span>
        </div>

        <div class="box2">body
          <span><%= list.body %> </span>
        </div>

        <div class="box3">
          <%= link_to "Show", book_path(list.id), method: :show %>
          <%= link_to "Edit", book_path(list.id), method: :edit %>
          <%= link_to "Destroy", book_path(list.id), method: :delete %>

        </div>

      </div>

    <% end %>
  </div>
</div>


<div class=newform>

  <%= form_with model:Book.new do |f| %>

  <div class = newheader>
    <h2>New book</h2>
  </div>

  <div class="new_form">
    <div class="title_box">
      <div class="bookname">タイトル</div>
      <%= f.text_field :title %>

    </div>

    <div class="body_box">
      <div class="bookfeedback">本文</div>
       <%= f.text_area :body %>
    </div>

  </div>

  <%= f.submit '投稿' %>
  <%end %>

</div>
