
<div class="index">

  <div class="header">
    <h1>Books</h1>
  </div>



   <div class="box_wrapper">
    <% @books.each do |list| %>
　    <div class="box">
　      <div class="box1">title
          <span><%= list.title %> </span>
        </div>

        <div class="box2">body
          <span><%= list.body %> </span>
        </div>

        <div class="box3">
          <%= link_to "Show", book_path(list.id), method: :get %>
          <%= link_to "Edit", edit_book_path(list.id), method: :get %>
          <%= link_to "Destroy", book_path(list.id), method: :delete %>

        </div>

      </div>

    <% end %>
  </div>
</div>


<div class=form>

  <% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model:Book.new do |f| %>

  <div class = form_header>
    <h2>New book</h2>
  </div>

  <div class="form_wrapper">
    <div class="title_box">
      <div class="bookname">タイトル</div>
      <%= f.text_field :title %>

    </div>

    <div class="body_box">
      <div class="bookfeedback">本文</div>
       <%= f.text_area :body %>
    </div>

  </div>

  <%= f.submit 'Create Book' %>
  <%end %>

</div>
