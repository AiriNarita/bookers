
<div class="index">

  <div class="header">
    <h1>Books</h1>
  </div>



   <div class="form">
    <% @books.each do |list| %>
　    <div class="box">
　      <div class="box1">title
          <span><%= list.title %> </span>
        </div>

        <div class="box2">body
          <span><%= list.body %> </span>
        </div>

        <div class="box3">
          <%= link_to "Show", book_path(list.id), method: :show %>
          <%= link_to "Edit", book_path(list.id), method: :edit %>
          <%= link_to "Destroy", book_path(list.id), method: :delete %>

        </div>

      </div>

    <% end %>
  </div>
</div>
<h2>New book</h2>


