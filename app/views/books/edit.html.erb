
<div class="edit">
  <div class="message">
    <%= flash[:notice] %>
  </div>

  <div class="edit_form">
    <h1>Editing Book</h1>

    <div class="error_message">
      <% if @book.errors.any? %>
      <h4><%= @book.errors.count %>error prohibited this book from being saved:</h4>
      <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
     </ul>
     <% end %>
    </div>

    <%= form_with model:@book do |f| %>

    <div class="field">
      <h4>title</h4>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <h4>body</h4>
      <%= f.text_area :body %>
    <div>
  </div>

   <div class="botton"></div>
     <div class="submit">
       <%= f.submit 'Update Book' %>
     </div>
     <% end %>

     <div class="select_bottun">
        <p><%= link_to "Show", book_path(@book.id) %> |
         <%= link_to "Back", books_path %> </p>
     </div>
    </div>

</div>